
<h2 class='font-bold text-center  text-3xl '>Log in</h2>

<%= form_for(resource, as: resource_name,class: "flex", url: session_path(resource_name)) do |f| %>


<div class='container w-10/12    mt-24 mx-auto '>
  <div class=" w-fit mx-auto">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: 'email',class:'user_email'%>
  </div>

  <div class=" w-fit mx-auto my-4">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:'password' %>
  </div>

  <div class=" mx-auto w-fit ring-4 ring-slate-900 text-lg my-4 p-2 rounded-lg bg-slate-700 text-white font-semibold ">
    <%= f.submit "Log in" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class=" mx-auto w-fit mb-12">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<% end %>

<%= render "devise/shared/links"  %>
</div>