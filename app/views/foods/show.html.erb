<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @food %>

    <%= link_to 'Edit this food', edit_food_path(@food), class: "mt-2 rounded-lg py-3 px-5 bg-orange-500 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this food', food_path(@food), method: :delete, class: "mt-2 rounded-lg py-3 px-5  bg-rose-500  font-medium" %>
    </div>

    <% if request.fullpath.to_s.include?('inventories')%>

  <%
    referer_path = URI(request.referer).path
    inventory_id = Rails.application.routes.recognize_path(referer_path)[:inventory_id] %>

    <%= link_to 'Back to inventory', show_inventory_foods_path(id:inventory_id) , class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%elsif request.fullpath.to_s.include?('recipes')%>

      <%
    referer_path = URI(request.referer).path
    recipe_id = Rails.application.routes.recognize_path(referer_path)[:recipe_id] %>

    <%= link_to 'Back to Recipes', show_list_of_foods_path(id:recipe_id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%else%>
    <%= link_to 'Back to foods', foods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
 
    <%end%>
 
  </div>
</div>
