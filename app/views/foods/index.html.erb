<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Foods</h1>
    <%= link_to 'New food', new_food_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="foods" class="min-w-full">
    <%= render @foods %>
  </div>
</div>
<%# I added this code %>

<div class="container mx-auto">
  <table class="min-w-full bg-white border border-gray-300">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Food</th>
        <th class="py-2 px-4 border-b">Quantity</th>
        <th class="py-2 px-4 border-b">Value</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= food.name %></td>
          <td class="py-2 px-4 border-b"><%= food.quantity %></td>
          <td class="py-2 px-4 border-b"><%= food.value %></td>
          <td class="py-2 px-4 border-b">
            <%= link_to "Modify", edit_food_path(food), class: "btn-modify" %>
            <%= link_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }, class: "btn-delete" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
