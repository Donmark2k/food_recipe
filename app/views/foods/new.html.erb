<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New food</h1>

  <%= render "form", food: @food %>


<% if request.fullpath.to_s.include?('inventories')%>
  <%= link_to 'Back to inventory', :back, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

<%else%>
  <%= link_to 'Back to foods', foods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

<%end%>
</div>
